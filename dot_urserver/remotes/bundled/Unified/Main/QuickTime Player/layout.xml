<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" onResume="play" onPause="pause">
  <grid>
    <row weight="wrap">
      <label id="info" textAlign="center" />
    </row>
    <row weight="wrap">
      <slider id="pos" onChanged="seek" />
    </row>
    <row>
      <button icon="vdown" onTap="volume_down" />
      <button icon="vmute" onTap="volume_mute" />
      <button icon="vup" onTap="volume_up" />
    </row>
    <row>
      <button icon="rwd" onTap="rewind" />
      <button icon="ff" onTap="forward" />
    </row>
    <row>
      <button icon="stop" onTap="stop" />
      <button id="p" icon="play" onTap="play_pause" />
    </row>
  </grid>
</layout>