<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" onResume="play" onPause="pause" color="#2EB0EB">
  <grid>
    <row>
      <button icon="vdown" onTap="volume_down" />
      <button icon="vmute" onTap="volume_mute" />
      <button icon="vup" onTap="volume_up" />
    </row>
    <row>
      <button icon="stop" onTap="stop" />
      <button icon="playpause" onTap="play_pause" />
    </row>
    <row weight="4">
      <dpad onTap="select" icon="select">
        <item onTap="up"/>
        <item onTap="right"/>
        <item onTap="down"/>
        <item onTap="left"/>
      </dpad>
    </row>
    <row>
      <button icon="back" onTap="back" />
    </row>
    <row>
      <button icon="previous" onTap="previous" />
      <button icon="rwd" onTap="rewind" />     
      <button icon="ff" onTap="fast_forward" />
      <button icon="next" onTap="next" />
    </row>
  </grid>
</layout>