<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" color="#075E8F">
  <grid>
    <row>
      <button icon="vdown" onTap="volume_down" />
      <button icon="vup" onTap="volume_up" />
    </row>
    <row>
      <button icon="thumbsup" onTap="thumbs_up" />
      <button icon="thumbsdown" onTap="thumbs_down" />
    </row>
    <row>
      <button icon="next" onTap="next" />
      <button icon="playpause" onTap="play_pause" />
    </row>
  </grid>
</layout>