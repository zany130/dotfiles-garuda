<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" lightcolor="blue" onResume="toggle_play" onPause="toggle_play">
  <row>
    <label id="info" text="[Connecting…]" textAlign="center"/>
  </row>
  <row weight="wrap">
    <slider id="position" text="Position" progress="0" progressmax="0" ondone="position" ondown="position_down" onup="position_up" />
  </row>
  <row>
    <button id="toggle_play" icon="play" onTap="toggle_play" />
  </row>
  <row>
    <button icon="previous" onTap="previous" />
    <button id="stop" icon="stop" onTap="stop" />
    <button icon="next" onTap="next" />
  </row>
  <row>
    <button text="Open File…" onTap="open_file" />
  </row>
</layout>
