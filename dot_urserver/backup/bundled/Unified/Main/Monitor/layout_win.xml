<?xml version="1.0" encoding="utf-8"?>
<layout>
  <grid>
    <row>
      <button text="Turn On" onTap="turn_on" color="green" />
    </row>
    <row>
      <button text="Turn Off" onTap="turn_off" color="red" />
    </row>
    <row>
      <button text="Standby" onTap="standby" />
    </row>
    <row color="blue">
		<button text="Duplicate" onTap="clone" />
		<button text="Extend" onTap="extend" />
	</row>
	<row color="blue">
		<button text="Computer only" onTap="internal" />
		<button text="Projector only" onTap="external" />
    </row>
  </grid>
</layout>