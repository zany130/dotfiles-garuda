<?xml version="1.0" encoding="utf-8"?>
<layout onLaunch="launch" onVolumeUp="volume_up" onVolumeDown="volume_down" color="#ef6c00">
  <grid>
    <row weight="wrap">
      <label id="info" text="[Not Playing / Tab Not Active]"/>
    </row>
    <row>
      <button icon="vdown" onTap="volume_down" />
      <button icon="search" onTap="search" />
      <button icon="vup" onTap="volume_up" />
    </row>
    <row>
      <button icon="rwd" onTap="seek_backward" />
      <button icon="arrowup" onTap="up" />
      <button icon="ff" onTap="seek_forward" />
    </row>
    <row>
      <button icon="previous" onTap="previous" />
      <button icon="select" onTap="select" />
      <button icon="next" onTap="next" />
    </row>
    <row>
      <button icon="back" onTap="close" />
      <button icon="arrowdown" onTap="down" />
      <button icon="flash" onTap="instant" />
    </row>
    <row>
      <button icon="thumbsdown" onTap="thumbs_down" />
      <button icon="thumbsup" onTap="thumbs_up" />
      <button icon="playpause" weight="2" onTap="play_pause" />
      <button icon="shuffle" onTap="play_shuffle" />
      <button icon="repeat" onTap="play_repeat" />
    </row>
  </grid>
</layout>